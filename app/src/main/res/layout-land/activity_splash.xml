<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/magenta_Lightoo"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.SplashActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie"
            android:layout_width="206dp"
            android:layout_height="214dp"
            android:layout_gravity="center"
            android:layout_margin="32dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/rotate_shape" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/getBizzy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bubblegum_sans"
                android:layout_margin="20dp"
                android:text="Get Busy"
                android:textColor="@color/magenta"
                android:textSize="60sp" />

            <TextView
                android:id="@+id/punchLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Dodge The Boredom, and Jump on in Find an activity to do!"
                android:textAlignment="textStart"
                android:textColor="#151515"
                android:textSize="36sp" />

        </LinearLayout>

    </LinearLayout>



</LinearLayout>